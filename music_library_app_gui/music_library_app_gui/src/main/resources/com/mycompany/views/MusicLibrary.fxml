<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="550.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.controllers.MusicLibraryController">
   <children>
      <Label layoutX="21.0" layoutY="14.0" prefHeight="61.0" prefWidth="765.0" text="           Your music library. Enjoy!" textAlignment="CENTER">
         <font>
            <Font name="Comic Sans MS" size="41.0" />
         </font>
      </Label>
      <TableView layoutX="18.0" layoutY="91.0" prefHeight="311.0" prefWidth="765.0">
        <columns>
          <TableColumn fx:id="songID" prefWidth="50.0" text="ID" />
          <TableColumn fx:id="songTitle" prefWidth="125.0" text="Title" />
            <TableColumn fx:id="authorName" prefWidth="125.0" text="Name" />
            <TableColumn fx:id="authorSurname" prefWidth="125.0" text="Surname" />
            <TableColumn fx:id="songAlbum" prefWidth="125.0" text="Album" />
            <TableColumn fx:id="releaseDate" prefWidth="125.0" text="Date" />
            <TableColumn fx:id="durationTime" prefWidth="90.0" text="Time" />
        </columns>
      </TableView>
      <Button layoutX="21.0" layoutY="437.0" mnemonicParsing="false" onAction="#addNewSong" prefHeight="50.0" prefWidth="150.0" text="Add new song" />
      <Button layoutX="189.0" layoutY="437.0" mnemonicParsing="false" onAction="#removeSong" prefHeight="50.0" prefWidth="150.0" text="Remove song" />
      <Button layoutX="636.0" layoutY="437.0" mnemonicParsing="false" onAction="#goBack" prefHeight="50.0" prefWidth="150.0" text="Exit" />
   </children>
</AnchorPane>
